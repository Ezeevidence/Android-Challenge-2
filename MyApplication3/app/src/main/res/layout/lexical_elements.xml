<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstPage"
        android:background="@drawable/back"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnWhitespace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White Space"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnIdentifiers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identifiers"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnReservedWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserved Words"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"

            />
        <Button
            android:id="@+id/btnLiterals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Literals"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"

            />
        <Button
            android:id="@+id/btnDelimters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delimiters"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"

            />
        <Button
            android:id="@+id/btnOperators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operators"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"

            />

    </LinearLayout>
</android.support.v7.widget.CardView>