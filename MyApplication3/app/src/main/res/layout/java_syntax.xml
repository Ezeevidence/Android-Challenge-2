<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstPage"
        android:background="@drawable/back"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDataTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Types"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnLexicalElements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lexical Elements"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnAplicationsOfJava"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/textborder"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/applications_of_java"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="italic"

            />

        <Button
            android:id="@+id/btnRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requirements"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/red"
            android:background="@drawable/textborder"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"

            />

    </LinearLayout>
</android.support.v7.widget.CardView>